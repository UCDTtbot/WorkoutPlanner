    <!-- Foreground View -->
    <RelativeLayout
        android:id="@+id/workout_list_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/standard_padding"
        android:elevation="5dp">

        <TextView
            android:id="@+id/item_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/quarter_padding"
            android:text="@string/default_title" />

        <TextView
            android:id="@+id/item_sets"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:paddingEnd="@dimen/half_padding"
            android:paddingStart="@dimen/half_padding"
            android:text="@string/default_set" />

        <TextView
            android:id="@+id/TEST_POS_ID"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_toEndOf="@+id/item_sets"
            android:paddingEnd="@dimen/half_padding"
            android:paddingStart="@dimen/half_padding"
            android:text="PosID: 1" />

        <TextView
            android:id="@+id/TEST_WRK_ID"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_toEndOf="@+id/TEST_POS_ID"
            android:paddingEnd="@dimen/half_padding"
            android:paddingStart="@dimen/half_padding"
            android:text="Wrkout ID: 1" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_right_arrow_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
