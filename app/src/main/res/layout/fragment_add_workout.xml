<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/frag_containter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_save">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentTop="true">

                <EditText
                    android:id="@+id/name_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name_hint"
                    android:maxLines="1"
                    android:maxLength="23"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/text_entries_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@id/name_layout">

                <LinearLayout
                    android:id="@+id/round_entry_layout"
                    style="@style/LinearEntryField">

                    <TextView
                        android:id="@+id/round_entry_title"
                        android:text="@string/round_title_text"
                        style="@style/EntryTextTitle" />

                    <EditText
                        android:id="@+id/round_entry_num"
                        android:text="@string/default_num"
                        android:inputType="number"
                        style="@style/EditTextEntryField"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rest_entry_layout"
                    style="@style/LinearEntryField">

                    <TextView
                        android:id="@+id/rest_entry_title"
                        android:text="@string/rest_title_text"
                        style="@style/EntryTextTitle"/>

                    <TextView
                        android:id="@+id/rest_entry_time"
                        style="@style/TextEntryField"
                        android:text="@string/default_time" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/break_entry_layout"
                    style="@style/LinearEntryField">

                    <TextView
                        android:id="@+id/break_entry_title"
                        android:text="@string/break_title_text"
                        style="@style/EntryTextTitle"/>

                    <TextView
                        android:id="@+id/break_entry_time"
                        android:text="@string/default_time"
                        style="@style/TextEntryField"/>

                </LinearLayout>
            </android.support.v7.widget.LinearLayoutCompat>


            <RelativeLayout
                android:id="@+id/view_pager_layout"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_below="@id/text_entries_layout">

                <android.support.design.widget.TabLayout
                    android:id="@+id/pager_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="60dp"
                    app:tabGravity="center"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabSelectedTextColor="@color/colorAccent"/>
                <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/pager_header">

                </android.support.v4.view.ViewPager>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_shallow_margin"
        android:text="@string/button_save" />

</RelativeLayout>

