<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_narrow_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_45_vert_size"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="2dp"
    android:focusable="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/standard_padding"
        android:visibility="visible">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/choose_set_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/choose_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_toEndOf="@id/choose_set_check"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/choose_set_name"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:text="@string/default_name" />

            <TextView
                android:id="@+id/choose_set_time"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="end"
                android:text="@string/default_time" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>