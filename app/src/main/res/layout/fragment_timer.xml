    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:padding="5dp"
        android:background="?android:selectableItemBackground">
        <LinearLayout
            android:id="@+id/linear_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/top_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/set_image"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/activity_shallow_margin"
                    android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
                    android:layout_marginBottom="@dimen/activity_shallow_vertical_margin"
                    android:background="@drawable/syle_rounded_drop_box"
                    android:src="@drawable/android" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/set_pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Set:"
                        android:paddingStart="@dimen/standard_padding"
                        android:paddingEnd="@dimen/standard_padding"
                        android:textSize="@dimen/text_size_large"/>
                    <TextView
                        android:id="@+id/set_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="18"
                        android:paddingStart="@dimen/deep_padding"
                        android:paddingEnd="@dimen/standard_padding"
                        android:text="Sample Title"
                        android:textColor="@color/material_light_black"
                        android:textSize="@dimen/text_size_xlarge"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/set_descrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some Sample Descrip Text"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
                android:minLines="5"
                android:maxLines="5"
                android:scrollbars="vertical"
                android:textSize="@dimen/text_size_normal"
                android:padding="@dimen/standard_padding" />


        </LinearLayout>


    </RelativeLayout>


    <View style="@style/Divider" />

    <!-- Timer/Text -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="40">

        <ProgressBar
            android:id="@+id/timer_progress"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@drawable/style_background_bar"
            android:indeterminate="false"
            android:max="100"
            android:progress="65"
            android:progressDrawable="@drawable/style_progress_bar" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/timer_progress">

            <TextView
                android:id="@+id/reps_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rep:" />

            <TextView
                android:id="@+id/reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reps_title"
                android:layout_centerInParent="true"
                android:text="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/timer_progress">

            <TextView
                android:id="@+id/rounds_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Round:" />

            <TextView
                android:id="@+id/rounds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rounds_title"
                android:layout_centerInParent="true"
                android:text="1" />
        </RelativeLayout>


        <TextView
            android:id="@+id/main_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_button"
            android:layout_centerInParent="true"
            android:text="time" />

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/android" />
    </RelativeLayout>




</LinearLayout>
