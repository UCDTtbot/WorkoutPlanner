<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shibedays.workoutplanner.ui.MyWorkoutActivity"
    tools:showIn="@layout/activity_my_workout"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:weightSum="100">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/view_pager_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <android.support.design.widget.TabLayout
            android:id="@+id/pager_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:tabGravity="center"
            app:tabBackground="@drawable/tab_selector"
            app:tabIndicatorHeight="0dp"/>

        <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pager_header">

        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/set_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>
    -->
    <View style="@style/Divider" />

    <RelativeLayout
        android:id="@+id/rel_view_titles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/rest_entry_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_deep_horizontal_margin"
            android:layout_marginTop="@dimen/activity_deep_vertical_margin"
            style="@style/LinearEntryField">

            <TextView
                android:id="@+id/rest_title_text"
                android:text="@string/rest_title_text"
                style="@style/EntryTextTitle"/>

            <TextView
                android:id="@+id/rest_time"
                style="@style/TextEntryField"
                android:text="@string/default_time" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/round_entry_layout"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            style="@style/LinearEntryField">

            <TextView
                android:id="@+id/rounds_title_text"
                android:text="@string/round_title_text"
                style="@style/EntryTextTitle" />

            <EditText
                android:id="@+id/number_rounds"
                android:text="@string/default_num"
                android:inputType="number"
                android:imeOptions="actionDone"
                style="@style/EditTextEntryField"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_time_layout"
            android:layout_below="@id/round_entry_layout"
            android:layout_centerInParent="true"
            style="@style/LinearEntryField">

            <TextView
                android:id="@+id/total_time_title"
                android:text="Total Time:"
                style="@style/EntryTextTitle" />

            <TextView
                android:id="@+id/total_time"
                android:text="@string/default_time"
                style="@style/EntryTextTitle"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/break_entry_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/activity_deep_horizontal_margin"
            android:layout_marginTop="@dimen/activity_deep_vertical_margin"
            style="@style/LinearEntryField">

            <TextView
                android:id="@+id/break_title_text"
                android:text="@string/break_title_text"
                style="@style/EntryTextTitle"/>

            <TextView
                android:id="@+id/break_time"
                android:text="@string/default_time"
                style="@style/TextEntryField"/>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/start_workout_button"
            android:onClick="startTimer"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    </RelativeLayout>

</LinearLayout>
