<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_set_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_half_vertical_size"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="@dimen/activity_shallow_horizontal_margin"
    android:layout_marginTop="@dimen/activity_quarter_margin"
    android:layout_marginEnd="@dimen/activity_shallow_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_quarter_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/standard_padding"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="@string/add_new_set" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:text="@string/ellipsis" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

