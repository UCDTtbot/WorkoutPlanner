<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bottom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/vert_padding"
        android:paddingEnd="@dimen/hori_padding"
        android:paddingBottom="@dimen/vert_padding"
        android:paddingStart="@dimen/hori_padding"
        android:layout_marginStart="20dp"
        android:text="Title"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/bottom_sheet_edit"
        style="@style/BottomSheetLinearRow">

        <ImageView
            android:id="@+id/edit_ic_btm_sheet"
            style="@style/BottomSheetImage"
            android:src="@drawable/ic_edit_black_24dp" />
        <TextView
            style="@style/BottomSheetText"
            android:text="@string/bottom_sheet_edit"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/bottom_sheet_delete"
        style="@style/BottomSheetLinearRow">

        <ImageView
            android:id="@+id/delete_ic_btm_sheet"
            style="@style/BottomSheetImage"
            android:src="@drawable/ic_delete_black_24dp" />
        <TextView
            style="@style/BottomSheetText"
            android:text="@string/bottom_sheet_delete"/>

    </LinearLayout>




</LinearLayout>