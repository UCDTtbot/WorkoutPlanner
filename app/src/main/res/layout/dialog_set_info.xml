<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/set_info_name"
        android:hint="@string/name_hint"
        style="@style/DialogEditText"/>

    <TextView
        android:id="@+id/set_info_descip"
        android:layout_below="@+id/set_info_name"
        android:hint="@string/descrip_hint"
        style="@style/DialogEditText"/>

    <include layout="@layout/number_spinners"
        android:id="@+id/set_info_spinners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_info_descip"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>