<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_shallow_margin">

    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/display_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:padding="2dp"
            android:layout_marginStart="@dimen/activity_shallow_margin"
            android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
            android:background="@drawable/syle_rounded_drop_box"
            android:src="@drawable/ic_image_black_24dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/set_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/display_set_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_hint"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/set_descrip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/top_row">

        <EditText
            android:id="@+id/display_set_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descrip_hint"
            android:inputType="none"
            android:clickable="false"
            android:focusable="false"
            android:gravity="start"
            android:maxLines="5"
            android:minLines="5"
            android:scrollbars="vertical"/>
    </android.support.design.widget.TextInputLayout>



    <ScrollView
        android:id="@+id/scroll_text"
        android:layout_below="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ScrollView>


    <TextView
        android:id="@+id/display_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_descrip_layout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_shallow_margin"
        android:layout_marginEnd="@dimen/activity_shallow_margin"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_large"
        android:hint="@string/default_time"/>

</RelativeLayout>