<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_wide_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_standard_vertical_size"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="@dimen/activity_shallow_horizontal_margin"
    android:layout_marginTop="@dimen/activity_quarter_margin"
    android:layout_marginEnd="@dimen/activity_shallow_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_quarter_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/standard_padding"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/set_top_row_wide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/set_name_wide"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="@string/default_set_name"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/set_time_wide"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="end"
                android:text="@string/default_time" />

        </LinearLayout>

        <TextView
            android:id="@+id/set_descrip_wide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_top_row_wide"
            android:padding="@dimen/half_padding"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/default_descrip"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

