<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="?android:selectableItemBackground">
    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/top_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/set_image"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/activity_shallow_margin"
                android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
                android:layout_marginBottom="@dimen/activity_shallow_vertical_margin"
                android:background="@drawable/syle_rounded_drop_box"
                android:src="@drawable/android" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/set_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="18"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="@dimen/activity_shallow_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_shallow_horizontal_margin"
                    android:text="Sample Title"
                    android:textColor="@color/material_light_black"
                    android:textSize="@dimen/text_size_large"/>
                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_below="@id/set_name"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/material_light_black"
                    android:text="Set Time"/>
                <TextView
                    android:id="@+id/set_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_below="@id/time_title"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/material_light_black"

                    android:text="@string/default_time"/>

                <ImageView
                    android:id="@+id/edit_ic"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/activity_shallow_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_shallow_horizontal_margin"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_edit_black_24dp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/set_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Sample Descrip Text"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
            android:minLines="8"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:textSize="@dimen/text_size_normal"
            android:padding="@dimen/standard_padding" />
    </LinearLayout>


</RelativeLayout>