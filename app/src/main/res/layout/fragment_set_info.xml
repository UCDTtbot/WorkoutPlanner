<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="?android:selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/top_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/set_image"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/activity_shallow_margin"
                android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
                android:background="@drawable/syle_rounded_drop_box"
                android:src="@drawable/android" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/set_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="18"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="@dimen/activity_shallow_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_shallow_horizontal_margin"
                    android:text="Sample Title"
                    android:textColor="@color/material_light_black"
                    android:textSize="@dimen/text_size_large"/>
                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_shallow_vertical_margin"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/material_light_black"
                    android:text="Set Time"/>
                <TextView
                    android:id="@+id/set_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_below="@id/time_title"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/material_light_black"

                    android:text="@string/default_time"/>

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/set_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some Sample Descrip Text"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_below="@id/top_row"
            android:layout_above="@id/ic_row"
            android:minLines="10"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:textSize="@dimen/text_size_normal"
            android:padding="@dimen/standard_padding" />

        <RelativeLayout
            android:id="@+id/ic_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/edit_ic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageView
                android:id="@+id/delete_ic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete_black_24dp" />

            <ImageView
                android:id="@+id/video_ic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_toStartOf="@id/edit_ic"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="2dp"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_info_black_24dp" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>