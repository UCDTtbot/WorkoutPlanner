<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="Theme">
        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:summary="Material Dark Theme"
            android:title="Dark Theme"/>
    </PreferenceCategory>


    <PreferenceCategory android:title="Voice">
        <SwitchPreference
            android:defaultValue="false"
            android:key="voice_mute"
            android:summary="Mute the trainer"
            android:title="Mute"/>
        <ListPreference
            android:defaultValue="M1"
            android:entries="@array/voice_options_titles"
            android:entryValues="@array/voice_options_values"
            android:key="voice_type"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Voice Type" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Support">
        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_ads"
            android:summaryOff="Thank you for your support! But I understand ads are annoying. Click to disable ads."
            android:summaryOn="Click to enable ads and support development."
            android:title="Disable Ads" />
        <Preference
            android:key="send_feedback"
            android:title="Send Feedback"
            android:summary="Send feedback or bugs to developer"/>
        <Preference
            android:key="rate_me"
            android:title="Leave a Rating!"
            android:summary="Leave a rating for the app on Google Play!"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:key="about"
            android:title="Workout Trainer"
            android:summary="Version: "/>
        <Preference
            android:key="libraries"
            android:title="Open Sourced Libraries"
            android:summary="License Details"/>
    </PreferenceCategory>


</PreferenceScreen>