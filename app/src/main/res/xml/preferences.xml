<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="General">
        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:summaryOn="Switch to light theme"
            android:summaryOff="Switch to dark theme"
            android:title="Dark Theme"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="voice_mute"
            android:summary="Mute voice assistant"
            android:title="Mute"/>
        <SwitchPreference
            android:defaultValue="true"
            android:key="vibrate"
            android:summary="Toggle vibration on or off"
            android:title="Vibrate"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="Support">
        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_ads"
            android:summaryOff="Thank you for your support!"
            android:summaryOn="Click to enable ads and support development"
            android:title="Disable Ads" />
        <Preference
            android:key="rate_me"
            android:title="Leave a Rating"
            android:summary="Leave a rating or feedback on the app on Google Play!"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:key="about"
            android:title="Simple Workout Planner &amp; Timer"
            android:summary="Version: v0.6"/>
        <Preference
            android:key="libraries"
            android:title="Open Sourced Libraries"
            android:summary="License Details"/>
        <Preference
            android:key="legal"
            android:title="Legal Information"
            android:summary="Legal information and license."/>
    </PreferenceCategory>


</PreferenceScreen>