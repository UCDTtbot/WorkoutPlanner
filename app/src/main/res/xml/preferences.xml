<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="Theme">
        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:summaryOn="Switch to light theme."
            android:summaryOff="Switch to dark theme."
            android:title="Dark Theme"/>
    </PreferenceCategory>


    <PreferenceCategory android:title="Voice">
        <SwitchPreference
            android:defaultValue="false"
            android:key="voice_mute"
            android:summary="Mute the voice assistant."
            android:title="Mute"/>
        <!--
        <ListPreference
            android:defaultValue="M1"
            android:entries="@array/voice_options_titles"
            android:entryValues="@array/voice_options_values"
            android:key="voice_type"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Voice Type" />
            -->
    </PreferenceCategory>

    <PreferenceCategory android:title="Support">
        <SwitchPreference
            android:defaultValue="false"
            android:key="disable_ads"
            android:summaryOff="Thank you for your support! But I understand ads are annoying. Click to disable ads."
            android:summaryOn="Click to enable ads and support development."
            android:title="Disable Ads" />
        <Preference
            android:key="rate_me"
            android:title="Leave a Rating!"
            android:summary="Leave a rating or feedback on the app on Google Play!"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="About">
        <Preference
            android:key="about"
            android:title="Simple Workout Planner &amp; Timer"
            android:summary="Version: v0.6"/>
        <Preference
            android:key="libraries"
            android:title="Open Sourced Libraries"
            android:summary="License Details"/>
        <Preference
            android:key="legal"
            android:title="Legal Information"
            android:summary="Legal information and license."/>
    </PreferenceCategory>


</PreferenceScreen>